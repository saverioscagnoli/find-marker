{
  "name": "find-marker",
  "version": "0.0.3",
  "description": "A simple and lightweight package to find a marker file in a directory tree.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saverioscagnoli/find-marker"
  },
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "rimraf dist && tsup src/index.ts --format cjs,esm --dts",
    "lint": "tsc"
  },
  "keywords": [
    "root",
    "find",
    "lookup",
    "file",
    "marker",
    "search"
  ],
  "author": "saverioscagnoli",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.4",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  }
}
